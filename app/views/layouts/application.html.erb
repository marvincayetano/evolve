<!DOCTYPE html>
<html>
  <head>
    <title>Evolve</title>
    <%= csrf_meta_tags %>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <!-- NAV BAR ############################################################# -->
  <body>
    <% if !user_signed_in? %> <!-- IF USER IS SIGNED IN -->
      <nav class="navbar navbar-default navbar-static-top navbar-fixed-top" id="mainNav" role="navigation">
	<div class='container'>
	  <div class="navbar-header">
	    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
	      <span class="sr-only">Toggle navigation</span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	      </button>
	      <%= link_to "/", class: "navbar-brand" do %>
		<!-- <i class="fa fa-group"></i> -->
	      <% end %>
	  </div>

	  <div class="collapse navbar-collapse" id="main-nav-collapse">
	    <ul class="nav navbar-nav navbar-right">
		<li><%= link_to "ABOUT", about_path %></li>
		<li><%= link_to "SERVICES", services_path %></li>
		<li><%= link_to "PRODUCTS", products_path %></li>
		<li><%= link_to "CLIENTS", clients_path %></li>
		<li><%= link_to "CONTACT US", new_contact_path %></li>
		<li><%= link_to "LOGIN", new_user_session_path %></li>
	    </ul>
	  </div>
	</div>
      </nav>
    <% else %>
      <%= link_to "LOGOUT", destroy_user_session_path, method: :delete %>
      <%= link_to "NEW PROFILE", new_user_profile_path(user_id: current_user.id) %>
    <% end %><!-- END OF IF USER IS SIGNED IN -->
    <!-- END OF NAV BAR #################################################### -->

    <!-- START OF ALERT MSG ################################################ -->
    <div class="container" style="position: absolute;">
      <% flash.each do |type, msg| %>
      <%= content_tag :div, msg, class: "alert alert-#{type}" %>
      <% end %>
    </div>
    <!-- END OF ALERT MSG ################################################## -->
      <%= yield %>
  </body>
</html>
