<header id="contactUsHeader">
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<h2><strong>CONTACT US</strong></h1>
			</div>
			<div class="col-md-10 col-md-offset-1">
				<h3>We love to hear from the people who use our software</h3>
			</div>
		</div>
	</div>
</header>

<section id="contactUsForm">
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center contactUsGetInTouch">
				<h3>Get in touch with us</h3>
			</div>	
		</div>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= form_for @contact do |f| %>
					<div class="form-group">
						<%= f.label "All fields are required(*)" %>
					</div>
					<div class="form-group">
						<%= f.label :first_name %>
						<%= f.text_field :first_name , class: 'form-control formFields' %>
					</div>
					<div class="form-group">
						<%= f.label :last_name %>
						<%= f.text_field :last_name , class: 'form-control formFields' %>
					</div>
					<div class="form-group">
						<%= f.label :email %>
						<%= f.text_field :email, class: 'form-control formFields' %>
					</div>
					<div class="form-group">
						<%= f.label :company_name %>
						<%= f.text_field :company_name, class: 'form-control formFields' %>
					</div>
					<div class="form-group">
						<%= f.label :comments %>
						<%= f.text_area:comments, class: 'form-control formFields' %>
					</div>
					<%= f.submit 'Submit',class: 'btn btn-warning form-control formFields'%>
				<% end %> 
			</div>
		</div>
	</div>
</section>

