<li  id="userpost-<%= userpost.id %>">
	<div class="row">
		<div class="col-sm-2 text-center">
			<%= image_tag @user.profile.avatar.url %>
		</div>
		<div class="col-sm-10">
			<span class="user link-unstyled"><%= link_to userpost.user.email, userpost.user %></span>
			<span class="content"><%= userpost.content %></span>
			<span class="timestamp">
				Posted <%= time_ago_in_words(userpost.created_at) %> ago.
			</span>
		</div>
	</div>
</li>
