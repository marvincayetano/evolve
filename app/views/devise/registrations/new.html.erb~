          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>

          <div class="field form-group">
            <%= f.label :company_id, 'Company ID' %>
            <a data-toggle="popover" data-content="An id that has been given to your company representative for security purposes."><span class="glyphicon glyphicon-question-sign"></span></a> 
            <%= f.password_field :company_id, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= label_tag :first_name, 'First Name' %><br />
            <%= text_field_tag :first_name, nil, name: nil, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= label_tag :last_name, 'Last Name' %><br />
            <%= text_field_tag :last_name, nil, name: nil, class: 'form-control' %>
          </div>

          <div class="field form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>


          <div class="actions form-group">
            <%= f.submit "Sign up", class: 'btn btn-success' %>
          </div>
